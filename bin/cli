#!/usr/bin/env node
var argv = require("optimist").
usage("Usage: $0 -t [type] -c [config]").
demand(["t"]).
default("c", "~/.maestro/config.json").
argv;


var maestro = require("../"),
config = require(argv.c.replace("~", process.env.HOME));

if(argv.t == "server") {
	maestro(config, function(){});
} else
if(argv.t == "client") {
	maestro.client(config, function(){ });
}